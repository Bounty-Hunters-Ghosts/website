---
import Layout from '../layouts/Layout.astro';

// TODO: Randomize these
import IMG_Intro_Background from '@assets/images/home/back.png';
---

<Layout>
	<div id="intro" class="w-screen h-screen">
    <h1>Bounty Hunters Ghosts</h1>
  </div>
  <div id="back" class="size-[4000px]">
        
  </div>
</Layout>

<style lang="scss" define:vars={{ bgUrl: `url(${IMG_Intro_Background.src})` }}>
  @use 'sass:color';

  @use '@css/variables' as *;
  @use '@css/elements';
  
  #intro {
    background-image: var(--bgUrl);
    background-size: cover;
    background-position: center;
    mask-image: linear-gradient(180deg, black, black 80%, transparent);
  }

  #back {
    background-color: black;
    background: 
      url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="512" height="512"><filter id="noise" x="0" y="0" width="100%" height="100%"><feTurbulence type="fractalNoise" baseFrequency="0.75" numOctaves="3" seed="45435" stitchTiles="stitch"/><feColorMatrix type="saturate" values="0"/><feComponentTransfer><feFuncA type="linear" slope="0.075"/></feComponentTransfer></filter><rect width="100%" height="100%" filter="url(%23noise)" fill="transparent"/></svg>'),
      repeat;
    mask-image: linear-gradient(180deg, transparent, black 15%, black);
  }
</style>
